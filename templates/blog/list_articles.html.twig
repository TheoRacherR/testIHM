{% extends 'base.html.twig' %}

{% block title %}Gestion des articles
{% endblock %}

{% block body %}
	<h1>Liste des articles</h1>

	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th scope="col">Titre</th>
				<th scope="col">Créé le</th>
				<th scope="col">Modifié le</th>
			</tr>
		</thead>
		<tbody>
			{% for art in articles %}
				<tr>
					<td>{{ art.title }}</td>
					<td>{{ art.createdAt|date("d/m/Y") }}</td>
					<td>{{ art.updatedAt|date("d/m/Y") }}</td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            <a href="{{ path('article_page', {'id': art.id}) }}" class="article-page">
                                <p>Article page</p>
                            </a>
                            <a href="{{ path('edit_article', {'id': art.id}) }}" class="article-edit">
                                <p>Edit the article</p>
                            </a>
                            <a href="{{ path('delete_article', {'id': art.id}) }}" class="article-delete">
                                <p>Delete the article</p>
                            </a>
                        </div>
                    </td>
				</tr>
			{% endfor %}

			<a href="{{ path('add_article')}}" id="add-article" class="btn btn-success">
				Add an article
			</a>

		</tbody>
	</table>
{% endblock %}
